<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">ドラフト会議作成</h1>
  </div>

  <!-- Form Card -->
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <%= form_with model: @draft, local: true, class: "px-6 py-8" do |form| %>
      <!-- Error Messages -->
      <% if @draft.errors.any? %>
        <div class="mb-6 bg-red-50 border-l-4 border-red-400 p-4 rounded">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800"><%= pluralize(@draft.errors.count, "件の") %>エラーがあります:</h3>
              <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                <% @draft.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Form Fields -->
      <div class="space-y-6">
        <!-- Year -->
        <div>
          <%= form.label :year, "年度", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.number_field :year, value: @draft.year || Time.current.year, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-4 py-2 border" %>
        </div>

        <!-- Starts with Central -->
        <div>
          <%= form.label :starts_with_central, "先攻リーグ", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="flex gap-4">
            <div class="flex items-center">
              <%= form.radio_button :starts_with_central, true, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300" %>
              <%= form.label :starts_with_central, "セ・リーグ", value: true, class: "ml-2 text-sm text-gray-700" %>
            </div>
            <div class="flex items-center">
              <%= form.radio_button :starts_with_central, false, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300" %>
              <%= form.label :starts_with_central, "パ・リーグ", value: false, class: "ml-2 text-sm text-gray-700" %>
            </div>
          </div>
        </div>

        <!-- Virtual -->
        <div class="flex items-center">
          <%= form.check_box :virtual, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          <%= form.label :virtual, "バーチャルドラフト（シミュレーション/練習用）", class: "ml-2 text-sm text-gray-700" %>
        </div>

        <!-- Team Standings -->
        <div>
          <h2 class="text-lg font-semibold text-gray-900 mb-4">チーム順位</h2>
          <div class="border rounded-lg overflow-hidden">
            <!-- Central League -->
            <div class="bg-gray-50 px-4 py-3 border-b">
              <h3 class="text-sm font-medium text-gray-700">セ・リーグ</h3>
            </div>
            <div class="divide-y">
              <%= form.fields_for :team_standings, @draft.team_standings.select { |ts| ts.team.central? } do |ts_form| %>
                <div class="px-4 py-3 flex items-center justify-between">
                  <div class="flex-1">
                    <span class="text-sm text-gray-900"><%= ts_form.object.team.name %></span>
                  </div>
                  <div class="flex items-center">
                    <%= ts_form.label :rank, "順位:", class: "text-sm text-gray-700 mr-2" %>
                    <%= ts_form.number_field :rank,
                        min: 1, max: 6, required: true, placeholder: "順位",
                        class: "w-20 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-3 py-2 border" %>
                    <%= ts_form.hidden_field :team_id %>
                  </div>
                </div>
              <% end %>
            </div>

            <!-- Pacific League -->
            <div class="bg-gray-50 px-4 py-3 border-b border-t">
              <h3 class="text-sm font-medium text-gray-700">パ・リーグ</h3>
            </div>
            <div class="divide-y">
              <%= form.fields_for :team_standings, @draft.team_standings.select { |ts| ts.team.pacific? } do |ts_form| %>
                <div class="px-4 py-3 flex items-center justify-between">
                  <div class="flex-1">
                    <span class="text-sm text-gray-900"><%= ts_form.object.team.name %></span>
                  </div>
                  <div class="flex items-center">
                    <%= ts_form.label :rank, "順位:", class: "text-sm text-gray-700 mr-2" %>
                    <%= ts_form.number_field :rank,
                        min: 1, max: 6, required: true, placeholder: "順位",
                        class: "w-20 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-3 py-2 border" %>
                    <%= ts_form.hidden_field :team_id %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <p class="mt-2 text-sm text-gray-500">※ 全12球団の順位を1〜12で入力してください</p>
        </div>
      </div>

      <!-- Actions -->
      <div class="mt-8 flex gap-3">
        <%= form.submit "作成", class: "inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition duration-150 ease-in-out" %>
        <%= link_to "キャンセル", drafts_path, class: "inline-flex items-center px-6 py-3 bg-gray-600 hover:bg-gray-700 text-white font-medium rounded-lg transition duration-150 ease-in-out" %>
      </div>
    <% end %>
  </div>
</div>
