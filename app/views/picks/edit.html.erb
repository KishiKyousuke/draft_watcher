<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900"><%= t('picks.edit.title', player_name: @selected_player.name) %></h1>
  </div>

  <!-- Form Card -->
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <%= form_with model: @pick, local: true, class: "px-6 py-8" do |form| %>
      <!-- Error Messages -->
      <% if @pick.errors.any? %>
        <div class="mb-6 bg-red-50 border-l-4 border-red-400 p-4 rounded">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800"><%= pluralize(@pick.errors.count, "error") %> prohibited this pick from being saved:</h3>
              <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                <% @pick.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Form Fields -->
      <div class="space-y-6">
        <!-- Player -->
        <div>
          <%= form.label :player_id, Pick.human_attribute_name(:player), class: "block text-sm font-medium text-gray-700 mb-1" %>
          <div class="mt-1 p-3 bg-gray-50 rounded-md border border-gray-300">
            <span class="text-sm font-medium text-gray-900"><%= @selected_player.name %></span>
            <span class="text-sm text-gray-500 ml-2">(<%= @selected_player.name_kana %>)</span>
            <%= form.hidden_field :player_id %>
          </div>
        </div>

        <!-- Year -->
        <div>
          <%= form.label :year, Pick.human_attribute_name(:year), class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.number_field :year, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-4 py-2 border" %>
        </div>

        <!-- Team -->
        <div>
          <%= form.label :team_id, Pick.human_attribute_name(:team), class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.collection_select :team_id, @teams, :id, :short_name,
              { prompt: t('picks.form.select_team') },
              { required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-4 py-2 border" } %>
        </div>

        <!-- Draft Round -->
        <div>
          <%= form.label :draft_round, Pick.human_attribute_name(:draft_round), class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.number_field :draft_round, min: 1, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-4 py-2 border" %>
        </div>

        <!-- Training Player -->
        <div class="flex items-center">
          <%= form.check_box :training_player, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          <%= form.label :training_player, Pick.human_attribute_name(:training_player), class: "ml-2 text-sm text-gray-700" %>
        </div>

        <!-- Confirmed -->
        <div class="flex items-center">
          <%= form.check_box :confirmed, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          <%= form.label :confirmed, Pick.human_attribute_name(:confirmed), class: "ml-2 text-sm text-gray-700" %>
        </div>
      </div>

      <!-- Actions -->
      <div class="mt-8 flex gap-3">
        <%= form.submit t('picks.edit.update'), class: "inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition duration-150 ease-in-out" %>
        <%= link_to t('picks.edit.cancel'), player_path(@selected_player), class: "inline-flex items-center px-6 py-3 bg-gray-600 hover:bg-gray-700 text-white font-medium rounded-lg transition duration-150 ease-in-out" %>
      </div>
    <% end %>
  </div>
</div>
