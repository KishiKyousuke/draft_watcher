<h1>選手情報編集</h1>

<div class="player-form">
  <%= form_with model: @player, local: true do |form| %>
    <% if @player.errors.any? %>
      <div class="error-messages">
        <h4><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</h4>
        <ul>
          <% @player.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :name, "名前" %>
      <%= form.text_field :name, required: true %>
    </div>

    <div class="field">
      <%= form.label :name_kana, "ふりがな" %>
      <%= form.text_field :name_kana, required: true %>
    </div>

    <div class="field">
      <%= form.label :category, "カテゴリ" %>
      <%= form.select :category,
          options_for_select([
            ['高校生', 'high_school'],
            ['大学生', 'university'],
            ['社会人', 'corporate'],
            ['独立リーグ', 'independent'],
            ['その他', 'other']
          ], @player.category),
          { prompt: '選択してください' },
          { required: true } %>
    </div>

    <div class="field">
      <%= form.label :affiliation, "所属" %>
      <%= form.text_field :affiliation %>
    </div>

    <div class="field">
      <%= form.label :position_ids, "ポジション" %>
      <div class="position-checkboxes">
        <%= form.collection_check_boxes :position_ids, @positions, :id, :name do |b| %>
          <div class="position-checkbox">
            <%= b.check_box %>
            <%= b.label %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="field">
      <%= form.label :pitching_batting, "投打" %>
      <%= form.select :pitching_batting,
          options_for_select([
            ['右投右打', 'right_handed_right_batting'],
            ['右投左打', 'right_handed_left_batting'],
            ['右投両打', 'right_handed_both_batting'],
            ['左投右打', 'left_handed_right_batting'],
            ['左投左打', 'left_handed_left_batting'],
            ['左投両打', 'left_handed_both_batting']
          ], @player.pitching_batting),
          { prompt: '選択してください' } %>
    </div>

    <div class="field">
      <%= form.label :height, "身長(cm)" %>
      <%= form.number_field :height %>
    </div>

    <div class="field">
      <%= form.label :weight, "体重(kg)" %>
      <%= form.number_field :weight %>
    </div>

    <div class="field">
      <%= form.label :age, "年齢" %>
      <%= form.number_field :age %>
    </div>

    <div class="field">
      <%= form.label :description, "寸評" %>
      <%= form.text_area :description, rows: 4 %>
    </div>

    <div class="actions">
      <%= form.submit "更新", class: "btn btn-primary" %>
      <%= link_to "詳細", player_path(@player), class: "btn btn-secondary" %>
      <%= link_to "一覧に戻る", players_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>