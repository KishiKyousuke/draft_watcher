<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">ドラフト候補選手登録</h1>
  </div>

  <!-- Form Card -->
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <%= form_with model: @player, local: true, class: "px-6 py-8" do |form| %>
      <!-- Error Messages -->
      <% if @player.errors.any? %>
        <div class="mb-6 bg-red-50 border-l-4 border-red-400 p-4 rounded">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800"><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</h3>
              <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                <% @player.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Form Fields -->
      <div class="space-y-6">
        <!-- Name -->
        <div>
          <%= form.label :name, "名前", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :name, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-4 py-2 border" %>
        </div>

        <!-- Name Kana -->
        <div>
          <%= form.label :name_kana, "ふりがな", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :name_kana, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-4 py-2 border" %>
        </div>

        <!-- Category -->
        <div>
          <%= form.label :category, "カテゴリ", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.select :category,
              options_for_select(Player.categories.map { |key, _| [t("activerecord.attributes.player.categories.#{key}"), key] }, @player.category),
              { prompt: t('players.form.select_prompt') },
              { required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-4 py-2 border" } %>
        </div>

        <!-- Affiliation -->
        <div>
          <%= form.label :affiliation, "所属", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :affiliation, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-4 py-2 border" %>
        </div>

        <!-- Positions -->
        <div>
          <%= form.label :position_ids, "ポジション", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="grid grid-cols-2 sm:grid-cols-3 gap-3">
            <%= form.collection_check_boxes :position_ids, @positions, :id, :name do |b| %>
              <div class="flex items-center">
                <%= b.check_box class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
                <%= b.label class: "ml-2 text-sm text-gray-700" %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Pitching/Batting -->
        <div>
          <%= form.label :pitching_batting, "投打", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.select :pitching_batting,
              options_for_select(Player.pitching_battings.map { |key, _| [t("activerecord.attributes.player.pitching_battings.#{key}"), key] }, @player.pitching_batting),
              { prompt: t('players.form.select_prompt') },
              { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-4 py-2 border" } %>
        </div>

        <!-- Physical Stats Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
          <!-- Height -->
          <div>
            <%= form.label :height, "身長(cm)", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.number_field :height, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-4 py-2 border" %>
          </div>

          <!-- Weight -->
          <div>
            <%= form.label :weight, "体重(kg)", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.number_field :weight, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-4 py-2 border" %>
          </div>

          <!-- Age -->
          <div>
            <%= form.label :age, "年齢", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.number_field :age, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-4 py-2 border" %>
          </div>
        </div>

        <!-- Description -->
        <div>
          <%= form.label :description, "寸評", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-4 py-2 border" %>
        </div>
      </div>

      <!-- Actions -->
      <div class="mt-8 flex gap-3">
        <%= form.submit "登録", class: "inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition duration-150 ease-in-out" %>
        <%= link_to "キャンセル", players_path, class: "inline-flex items-center px-6 py-3 bg-gray-600 hover:bg-gray-700 text-white font-medium rounded-lg transition duration-150 ease-in-out" %>
      </div>
    <% end %>
  </div>
</div>