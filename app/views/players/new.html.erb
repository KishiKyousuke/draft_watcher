<h1>ドラフト候補選手登録</h1>

<div class="player-form">
  <%= form_with model: @player, local: true do |form| %>
    <% if @player.errors.any? %>
      <div class="error-messages">
        <h4><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</h4>
        <ul>
          <% @player.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :name, "名前" %>
      <%= form.text_field :name, required: true %>
    </div>

    <div class="field">
      <%= form.label :name_kana, "ふりがな" %>
      <%= form.text_field :name_kana, required: true %>
    </div>

    <div class="field">
      <%= form.label :category, "カテゴリ" %>
      <%= form.select :category,
          options_for_select(Player.categories.map { |key, _| [t("activerecord.attributes.player.categories.#{key}"), key] }, @player.category),
          { prompt: t('players.form.select_prompt') },
          { required: true } %>
    </div>

    <div class="field">
      <%= form.label :affiliation, "所属" %>
      <%= form.text_field :affiliation %>
    </div>

    <div class="field">
      <%= form.label :position_ids, "ポジション" %>
      <div class="position-checkboxes">
        <%= form.collection_check_boxes :position_ids, @positions, :id, :name do |b| %>
          <div class="position-checkbox">
            <%= b.check_box %>
            <%= b.label %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="field">
      <%= form.label :pitching_batting, "投打" %>
      <%= form.select :pitching_batting,
          options_for_select(Player.pitching_battings.map { |key, _| [t("activerecord.attributes.player.pitching_battings.#{key}"), key] }, @player.pitching_batting),
          { prompt: t('players.form.select_prompt') } %>
    </div>

    <div class="field">
      <%= form.label :height, "身長(cm)" %>
      <%= form.number_field :height %>
    </div>

    <div class="field">
      <%= form.label :weight, "体重(kg)" %>
      <%= form.number_field :weight %>
    </div>

    <div class="field">
      <%= form.label :age, "年齢" %>
      <%= form.number_field :age %>
    </div>

    <div class="field">
      <%= form.label :description, "寸評" %>
      <%= form.text_area :description, rows: 4 %>
    </div>

    <div class="actions">
      <%= form.submit "登録", class: "btn btn-primary" %>
      <%= link_to "キャンセル", players_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>